{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
} 